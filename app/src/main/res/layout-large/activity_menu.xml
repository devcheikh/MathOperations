<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.basic.operations.math.mathoperations.Menu_Activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/menu_heading"
        android:id="@+id/menu_heading"
        android:layout_marginTop="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/menu_heading_size"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/easy_level"
        android:id="@+id/easy_level"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/menu_heading"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_level_easy"
        android:textColor="@color/white"
        android:padding="@dimen/padding_for_level_buttons"
        android:textSize="@dimen/level_heading_size"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/medium_level"
        android:id="@+id/medium_level"
        android:background="@drawable/background_level_medium"
        android:textColor="@color/white"
        android:layout_below="@+id/easy_level"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:padding="@dimen/padding_for_level_buttons"
        android:textSize="@dimen/level_heading_size"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hard_level"
        android:id="@+id/hard_level"
        android:background="@drawable/background_level_hard"
        android:textColor="@color/white"
        android:layout_below="@+id/medium_level"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:padding="@dimen/padding_for_level_buttons"
        android:textSize="@dimen/level_heading_size"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/play_and_stop_button"
        android:background="@drawable/play"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timer_button"
        android:background="@drawable/timer"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/menu_results"
        android:layout_below="@+id/hard_level"
        android:textSize="@dimen/menu_results_score"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal|center_vertical"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/trash"
        android:id="@+id/trash_score"
        android:padding="10dp"
        android:layout_alignBottom="@+id/timer_button"
        android:layout_centerHorizontal="true" />

</RelativeLayout>