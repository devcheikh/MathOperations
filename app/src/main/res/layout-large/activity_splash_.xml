<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.basic.operations.math.mathoperations.Splash_Activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/first_name"
        android:id="@+id/firstname"
        android:textSize="@dimen/first_name_size"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clickable="false"
        android:layout_marginTop="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/transparent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/math_sign_string"
        android:id="@+id/mathsigns"
        android:textSize="@dimen/last_name_size"
        android:layout_below="@+id/firstname"
        android:layout_centerHorizontal="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clickable="false"
        android:textColor="@android:color/transparent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/last_name"
        android:id="@+id/secondname"
        android:textSize="@dimen/last_name_size"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clickable="false"
        android:layout_below="@+id/mathsigns"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/transparent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/progress_bar_calculate"
        android:textSize="4sp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clickable="false"
        android:background="@drawable/rectange_progress_bar"
        android:layout_marginBottom="81dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/secondname"
        android:layout_alignStart="@+id/secondname"
        android:textColor="@android:color/transparent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/progress_bar_calculate_percentage"
        android:textSize="22sp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clickable="false"
        android:layout_alignTop="@+id/progress_bar_calculate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textColor="@color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/first_string_msg"
        android:text="@string/first_message_string"
        android:textSize="@dimen/string_messages_splash"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clickable="false"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/transparent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/second_string_msg"
        android:text="@string/second_message_string"
        android:focusable="false"
        android:textSize="@dimen/string_messages_splash"
        android:focusableInTouchMode="false"
        android:clickable="false"
        android:layout_below="@+id/first_string_msg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:textColor="@android:color/transparent" />

</RelativeLayout>
